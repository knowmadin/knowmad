<div class="container">
  <%= bootstrap_flash %>

  <%= form_for(resource,
    as: resource_name,
    url: registration_path(resource_name),
    html: {
      class: 'form-auth form-sign-up'
    }) do |f| %>
    <h2 class="form-auth-heading">Sign up</h2>

    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>

    <%= f.label :password, class: 'sr-only'%>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control password', placeholder: "Password (#{@minimum_password_length} characters minimum)" %>

    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control confirmation', placeholder: 'Confirm password' %>

    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>

    <%= render 'users/shared/links' %>
  <% end %>
</div>
