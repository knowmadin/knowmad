<%= form_for(resource,
  as: resource_name,
  url: password_path(resource_name),
  html: {
    method: :put,
    class: 'form-auth form-sign-up'
  }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <h2>Change your password</h2>

  <%= f.label :password, "New password", class: 'sr-only' %><br />
  <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
  <%= f.label :password_confirmation, 'Confirm new password', class: 'sr-only' %><br />
  <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm password' %>

  <%= f.submit 'Change my password', class: 'btn btn-lg btn-primary btn-block' %>

  <%= render "devise/shared/links" %>
<% end %>
